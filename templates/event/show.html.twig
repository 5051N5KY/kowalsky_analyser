{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Nazwa imprezy</th>
                <td>{{ event.eventName }}</td>
            </tr>
            <tr>
                <th>Rok imprezy</th>
                <td>{{ event.eventDate }}</td>
            </tr>
            <tr>
                <th>Data stworzenia</th>
                <td>{{ event.dateCreated ? event.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Data modyfikacji</th>
                <td>{{ event.dateModified ? event.dateModified|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_event_index') }}"  class="btn-list btn-add-object">Powr√≥t</a>

    <a href="{{ path('app_event_edit', {'id': event.id}) }}"  class="btn-list btn-delete-object">Edytuj</a>

    {{ include('event/_delete_form.html.twig') }}
{% endblock %}
