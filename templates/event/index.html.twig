{% extends 'base.html.twig' %}

{% block title %}Imprezy{% endblock %}

{% block body %}
    <h1>Lista imprez</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nazwa imprezy</th>
                <th>Rok imprezy</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.eventName }}</td>
                <td>{{ event.eventDate }}</td>
                <td>
                    <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn-list btn-add-object">Pokaż</a>
                    <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn-list btn-delete-object">Edytuj</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Brak wpisów</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_event_new') }}" class="btn-add-object">Dodaj</a>
{% endblock %}
