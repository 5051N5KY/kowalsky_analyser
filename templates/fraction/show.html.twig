{% extends 'base.html.twig' %}

{% block title %}Fraction{% endblock %}

{% block body %}
    <h1>Fraction</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ fraction.id }}</td>
            </tr>
            <tr>
                <th>Nazwa frakcji</th>
                <td>{{ fraction.fractionName }}</td>
            </tr>
            <tr>
                <th>Opis frakcji</th>
                <td>{{ fraction.fractionDescription }}</td>
            </tr>
            <tr>
                <th>Data stworzenia</th>
